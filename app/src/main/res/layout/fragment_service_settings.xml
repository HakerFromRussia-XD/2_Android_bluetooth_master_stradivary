<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="me.Romans.motorica.ui.chat.view.Service_settings.FragmentServiceSettings">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maunLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="77dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/layout_service_settings"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#e0e0e0"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border8"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:text="Грубость датчиков"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/seekBarRoughness"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border8"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="-3dp"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_toEndOf="@+id/textView13"
                    android:layout_toRightOf="@+id/textView13"
                    android:indeterminate="false"
                    android:max="32"
                    android:progress="13"
                    android:progressDrawable="@drawable/track"
                    android:thumb="@drawable/thumb" />

                <Switch
                    android:id="@+id/switchInvert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekBarRoughness"
                    android:layout_alignStart="@+id/seekBarRoughness"
                    android:layout_alignLeft="@+id/seekBarRoughness"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/valueNotUseInternalADC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/switchInvert"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:text="Внутринний АЦП"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/switchNotUseInternalADC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/switchInvert"
                    android:layout_alignStart="@+id/seekBarRoughness"
                    android:layout_alignLeft="@+id/seekBarRoughness"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/valueInvert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekBarRoughness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="4dp"
                    android:text="Инвертирование"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/border2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/switchNotUseInternalADC"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@android:color/darker_gray"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Number of channel:" />

                <Spinner
                    android:id="@+id/spinnerNumberOfChannel"
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/textView6" />

                <TextView
                    android:id="@+id/valueInvert2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekBarRoughness"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="113dp"
                    android:text="Инвертирование"
                    android:textSize="14sp" />

            </RelativeLayout>


            <!--            <RelativeLayout-->
            <!--                android:id="@+id/layout_sensors2"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="0dp"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_weight="1"-->
            <!--                android:layout_marginTop="0dp"-->
            <!--                android:layout_marginBottom="0dp"-->
            <!--                android:background="#121212"-->
            <!--                android:orientation="vertical"-->
            <!--                android:paddingLeft="0dp"-->
            <!--                android:paddingRight="0dp"-->
            <!--                android:visibility="visible"-->
            <!--                tools:ignore="MissingConstraints">-->
            <!--            </RelativeLayout>-->


        </ScrollView>

        <RelativeLayout
            android:id="@+id/layout_sensors1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#323232"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/save_service_settings"
                style="@style/Text"
                android:layout_margin="16dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/castom_batton"
                android:text="сохранить"
                android:visibility="visible" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>