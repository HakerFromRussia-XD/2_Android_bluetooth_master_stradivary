                    <TextView
                        android:id="@+id/textView842"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/font_open_sans_regular"
                        android:text="@string/if_the_open_and_closed_positions_of_the_prosthetic_fingers_do_not_match_after_pressing_it_you_will_see_an_animation_of_the_grip_that_will_be_applied_when_using_this_gesture"
