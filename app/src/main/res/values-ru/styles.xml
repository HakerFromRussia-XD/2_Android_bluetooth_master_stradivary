<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/darkOrange</item>
    </style>

    <style name="AppTheme.AppBarOverlay">AppTheme</style>
    <style name="AppTheme.PopupOverlay">PopupOverlay</style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffff00</item>
    </style>

    <style name="Text">
        <item name="android:textColor">#fff</item>
        <item name="fontFamily">@font/font_open_sans</item>
    </style>

    <style name="Text_transparency_80">
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="fontFamily">@font/font_open_sans</item>
    </style>

    <style name="Text_transparency_30">
        <item name="android:textColor">#4DFFFFFF</item>
        <item name="fontFamily">@font/font_open_sans</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorAccent">@color/darkOrange</item>
        <item name="android:textColorPrimary">@color/darkOrange</item>
        <item name="android:textColor">@color/darkOrange</item>
        <item name="colorControlNormal">@color/darkOrange</item>
        <item name="colorControlActivated">@color/darkOrange</item>
        <item name="colorControlHighlight">@color/darkOrange</item>
    </style>

</resources>
