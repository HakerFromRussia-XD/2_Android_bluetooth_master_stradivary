<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.Romans.motorica.ui.chat.view.Gesture_settings.FragmentGestureSettings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/maunLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout_sensors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:visibility="visible"
                tools:context="me.Romans.motorica.ui.scan.view.ScanActivity"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/gripper_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="64dp"
                    android:background="#ffffffff"
                    android:layout_marginTop="0dp"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/gesture_use"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:text="@string/use_gesture"
                        android:visibility="visible"
                        style="@style/Text"
                        android:background="@drawable/castom_batton"/>
                </LinearLayout>
            </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>