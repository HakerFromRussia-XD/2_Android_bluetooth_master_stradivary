<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- # Main Layout # -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <RelativeLayout
            android:id="@+id/middle_relative"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <View
                android:id="@+id/open_border"
                android:layout_width="7.5dp"
                android:layout_height="400dp"
                android:layout_alignTop="@+id/limit_CH1"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="-400dp"
                android:background="@drawable/open_border"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/close_border"
                android:layout_width="7.5dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/limit_CH2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-400dp"
                android:background="@drawable/close_border"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/driver_tv"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/driver_0_00v"
                android:textSize="10sp"
                tools:ignore="RtlHardcoded,SmallSp" />

            <TextView
                android:id="@+id/bms_tv"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/driver_tv"
                android:text="@string/bms_0_00v"
                android:textSize="10sp"
                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

            <TextView
                android:id="@+id/sensor_tv"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/bms_tv"
                android:text="@string/sens_0_00v"
                android:textSize="10sp"
                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="DisableBaselineAlignment">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <SeekBar
                        android:id="@+id/open_CH_sb"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-100dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-40dp"
                        android:indeterminate="false"
                        android:max="255"
                        android:progress="30"
                        android:progressDrawable="@drawable/track_invisible"
                        android:rotation="-90"
                        android:thumb="@drawable/thumb_invisible" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <SeekBar
                        android:id="@+id/close_CH_sb"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-40dp"
                        android:layout_marginEnd="-100dp"
                        android:indeterminate="false"
                        android:max="255"
                        android:progress="30"
                        android:progressDrawable="@drawable/track_invisible"
                        android:rotation="-90"
                        android:thumb="@drawable/thumb_invisible" />
                </RelativeLayout>
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_mainchart"
                android:layout_width="match_parent"
                android:layout_marginEnd="-19dp"
                android:layout_marginStart="-14dp"
                android:layout_height="320dp"
                android:foregroundGravity="center" />

            <RelativeLayout
                android:id="@+id/limit_CH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="80dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <View
                    android:id="@+id/touch_aria_open"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/touch_aria_open"/>

                <ImageView
                    android:id="@+id/open_threshold_iv"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/open_threshold"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/open_threshold_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/touch_aria_open"
                    android:layout_alignBottom="@+id/touch_aria_open"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/font_open_sans"
                    android:text="30"
                    android:textColor="@color/cream_white"
                    android:textSize="9sp"
                    tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/open_threshold_iv"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/touch_aria_open"
                    android:fontFamily="@font/font_open_sans"
                    android:paddingStart="0dp"
                    android:text="@string/open_threshold"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cream_white"
                    android:textSize="6sp"
                    tools:ignore="RtlSymmetry,SmallSp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/limit_CH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="94dp"
                android:layout_marginEnd="0dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <View
                    android:id="@+id/touch_aria_close"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/touch_aria_close" />

                <ImageView
                    android:id="@+id/close_threshold_iv"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/close_threshold"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/close_threshold_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@+id/touch_aria_close"
                    android:layout_alignEnd="@+id/touch_aria_close"
                    android:layout_alignBottom="@+id/touch_aria_close"
                    android:layout_alignTop="@+id/touch_aria_close"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/font_open_sans"
                    android:text="30"
                    android:textAlignment="center"
                    android:textColor="@color/open_threshold"
                    android:textSize="9sp"
                    tools:ignore="HardcodedText,RtlSymmetry,SmallSp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/close_threshold_iv"
                    android:layout_marginEnd="0dp"
                    android:layout_toStartOf="@+id/touch_aria_close"
                    android:fontFamily="@font/font_open_sans"
                    android:paddingStart="0dp"
                    android:text="@string/close_threshold"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/cream_white"
                    android:textSize="6sp"
                    tools:ignore="RtlSymmetry,SmallSp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- Bottom Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_below="@+id/middle_relative"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="7.5dp"
                        android:layout_height="400dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/open_border"
                        tools:ignore="ContentDescription" />

                    <View
                        android:layout_width="7.5dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="-10dp"
                        android:background="@drawable/close_border"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="7.5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="7.5dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/open_threshold"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/opening_sensor_sensitivity_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="@string/opening_sensor_sensitivity"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:id="@+id/correlator_noise_threshold_1_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="0"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5">

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/correlator_noise_threshold_1_sb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="255"
                                android:paddingStart="16dp"
                                android:paddingEnd="0dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/track_le"
                                android:thumb="@drawable/thumb_le" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="7.5dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/close_border"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="7.5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="7.5dp"
                        android:layout_marginBottom="0dp"
                        android:background="@color/close_threshold"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/closing_sensor_sensitivity_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="@string/closing_sensor_sensitivity"
                                android:textSize="9sp"
                                android:textStyle="bold"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:id="@+id/correlator_noise_threshold_2_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="0"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5">

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/correlator_noise_threshold_2_sb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="255"
                                android:paddingStart="16dp"
                                android:paddingEnd="0dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/track_le"
                                android:thumb="@drawable/thumb_le" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/swap_sensors_rl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4"
                        tools:ignore="DisableBaselineAlignment">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/swap_sensors_text_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/swap_sensors"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:id="@+id/swap_sensors_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="0"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5">

                            <Switch
                                android:id="@+id/swap_sensors_sw"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="0dp"
                                android:ellipsize="middle"
                                android:paddingStart="16dp"
                                android:scrollbarSize="48dp"
                                android:thumb="@drawable/switch_le_thumb"
                                android:track="@drawable/switch_le_truck"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/thresholds_blocking_rl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4"
                        tools:ignore="DisableBaselineAlignment">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/settings_blocking_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/settings_blocking"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:id="@+id/thresholds_blocking_tv"
                                style="@style/Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="@string/off"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5">

                            <Switch
                                android:id="@+id/thresholds_blocking_sw"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="0dp"
                                android:ellipsize="middle"
                                android:paddingStart="16dp"
                                android:scrollbarSize="48dp"
                                android:thumb="@drawable/switch_le_thumb"
                                android:track="@drawable/switch_le_truck"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="2"
                        tools:ignore="DisableBaselineAlignment">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/open_btn"
                                style="@style/Text"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/custom_button_le"
                                android:text="@string/open_btn"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/close_btn"
                                style="@style/Text"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/custom_button_le"
                                android:text="@string/close_btn"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
