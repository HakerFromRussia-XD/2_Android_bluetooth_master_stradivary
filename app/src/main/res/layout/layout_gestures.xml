<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/gesture_1_btn"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button_le"
        android:text="@string/gesture_1_btn"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/gesture_2_btn"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:background="@drawable/custom_button_le"
        android:text="@string/gesture_2_btn"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/gesture_1_btn"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/gesture_3_btn"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:background="@drawable/custom_button_le"
        android:text="@string/gesture_3_btn"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/gesture_2_btn"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>