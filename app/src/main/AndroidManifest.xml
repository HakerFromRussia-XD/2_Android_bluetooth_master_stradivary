<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.Romans.motorica">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="me.Romans.motorica.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="me.Romans.motorica.ui.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.Romans.motorica.ui.scan.view.ScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="me.Romans.motorica.ui.chat.view.ChartActivity"
            android:screenOrientation="portrait">
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.MAIN" />-->
<!--                <category android:name="android.intent.category.LAUNCHER" />-->
<!--            </intent-filter>-->
        </activity>

        <activity
            android:name="me.Romans.motorica.ui.chat.view.InfinitySettings"
            android:screenOrientation="portrait" />
        <activity
            android:name="me.Romans.motorica.ui.chat.view.experimental.DualChart"
            android:screenOrientation="landscape"/>
    </application>

</manifest>