<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/ubi4_back"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/beginGuideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ubi4_cardView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark"
        app:cardCornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="-2dp"
            android:src="@drawable/baseline_circle_24"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:src="@drawable/user"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ubi4_fio_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/font_inter_semi_bold"
        android:gravity="center"
        android:text="Ivan Sergeevich"
        android:textColor="@color/ubi4_white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline_2"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline_2"
        app:layout_constraintTop_toBottomOf="@+id/ubi4_cardView4"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/ubi4_app_prostheses_use_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/font_inter_semi_bold"
        android:text="@string/general"
        android:textColor="@color/ubi4_white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline_2"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline_2"
        app:layout_constraintTop_toBottomOf="@+id/ubi4_fio_tv" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:clipToOutline="true"
        android:elevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline_2"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline_2"
        app:layout_constraintTop_toBottomOf="@+id/ubi4_app_prostheses_use_title_tv">

        <!-- Внутренний контейнер для списка из двух пунктов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ubi4_view_with_corners_gray_outside"
            android:clipToOutline="true"
            android:orientation="vertical">

            <!-- Первая строка: Customer Service -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <!-- Иконка слева -->
                <ImageView
                    android:id="@+id/iconCustomerServiceIv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/customer_service"
                    app:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"/>

                <!-- Текст -->
                <TextView
                    android:id="@+id/customerServiceTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_service"
                    android:textColor="@color/ubi4_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_open_sans_regular"
                    app:layout_constraintStart_toEndOf="@id/iconCustomerServiceIv"
                    app:layout_constraintEnd_toStartOf="@id/chevronCustomerServiceIv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="12dp"/>

                <!-- Стрелка справа -->
                <ImageView
                    android:id="@+id/chevronCustomerServiceIv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="@color/ubi4_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"/>

                <!-- Ripple‑область -->
                <View
                    android:id="@+id/customerServiceClick"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Divider под строкой -->
                <View
                    android:id="@+id/dividerCustomerService"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/ubi4_gray_border"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Вторая строка: Prosthesis Information -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ImageView
                    android:id="@+id/iconProsthesisIv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/prosthesis_information"
                    app:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/prosthesisInfoTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/prosthesis_information"
                    android:textColor="@color/ubi4_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/font_open_sans_regular"
                    app:layout_constraintStart_toEndOf="@id/iconProsthesisIv"
                    app:layout_constraintEnd_toStartOf="@id/chevronProsthesisIv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="12dp"/>

                <ImageView
                    android:id="@+id/chevronProsthesisIv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_navigate_next"
                    android:tint="@color/ubi4_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"/>

                <View
                    android:id="@+id/prosthesisInfoClick"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/software_information_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/font_inter_semi_bold"
        android:text="@string/software_information"
        android:textColor="@color/ubi4_white"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline_2"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline_2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:clipToOutline="true"
        android:elevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="@+id/beginGuideline_2"
        app:layout_constraintEnd_toStartOf="@+id/endGuideline_2"
        app:layout_constraintTop_toBottomOf="@+id/software_information_title_tv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ubi4_view_with_corners_gray_outside"
            android:clipToOutline="true"
            android:orientation="vertical">



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
