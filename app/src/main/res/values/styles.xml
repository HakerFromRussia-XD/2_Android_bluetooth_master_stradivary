<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay">AppTheme</style>
    <style name="AppTheme.PopupOverlay">PopupOverlay</style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#ffff00</item>
    </style>

    <style name="Text">
        <item name="colorControlHighlight">@color/darkOrange</item>
        <item name="fontFamily">@font/font_open_sans</item>
    </style>

    <style name="Text_transparency_80">
        <item name="android:textColor">#CCCC8900</item>
        <item name="fontFamily">@font/font_open_sans</item>
    </style>

    <style name="Text_transparency_30">
        <item name="android:textColor">#4DCC8900</item>
        <item name="fontFamily">@font/font_open_sans</item>
    </style>


    <style name="TextInputLayout">
        <item name="colorAccent">@color/darkOrange</item>
        <item name="android:textColorPrimary">@color/darkOrange</item>
        <item name="android:textColor">@color/darkOrange</item>
        <item name="colorControlNormal">@color/darkOrange</item>
        <item name="colorControlActivated">@color/darkOrange</item>
        <item name="colorControlHighlight">@color/darkOrange</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <!-- To remove divider of the number picker -->
        <item name="colorControlNormal">@android:color/transparent</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@color/number_picker_bg</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>
