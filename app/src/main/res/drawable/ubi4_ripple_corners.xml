<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">

    <!-- Прозрачный "фон", чтобы не перебивать серый цвет,
         который лежит в backgroundBtn снизу -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Маска: совпадает с углами у ubi4_view_with_corners_gray -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <!-- Поставь тот же radius, что и в ubi4_view_with_corners_gray -->
            <corners android:radius="12dp"/>
            <!-- Маска обычно непрозрачная: -->
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
</ripple>