<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GLSurfaceView -->
    <com.bailout.stickk.ubi4.ui.gripper.with_encoders.UBI4GripperSettingsWithEncodersGLSurfaceView
        android:id="@+id/gl_surface_view_le_with_encoders"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Селектор состояния Open/Close -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gestureStateSelectorContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/ubi4_view_with_corners_gray_outside">

        <!-- Ползунок -->
        <View
            android:id="@+id/selectorIndicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/ubi4_view_with_corners_back_outside"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Центровая линия -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <!-- Кнопка Open -->
        <TextView
            android:id="@+id/gestureOpenBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="@string/gesture_state_open"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display_light"
            android:elevation="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Кнопка Close -->
        <TextView
            android:id="@+id/gestureCloseBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="@string/gesture_state_close"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:fontFamily="@font/sf_pro_display_light"
            android:elevation="3dp"
            app:layout_constraintStart_toEndOf="@+id/guideline_center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Кнопка Сохранить -->
    <Button
        android:id="@+id/gripperSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center_horizontal"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="@string/save"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible" />

    <!-- Название жеста -->
    <TextView
        android:id="@+id/gestureNameTv"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        style="@style/Text"
        android:visibility="visible"
        android:text="Gesture №1"
        tools:ignore="HardcodedText" />

    <!-- Редактируемый текст -->
    <EditText
        android:id="@+id/gesture_name_et"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:maxLength="12"
        android:textSize="14sp"
        android:textColor="#FFFFFFFF"
        style="@style/Text"
        app:hintTextAppearance="@style/TextInputLayout"
        android:visibility="gone"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <!-- Кнопка редактирования имени -->
    <ImageButton
        android:id="@+id/editGestureNameBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="81dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/track_invisible"
        android:src="@drawable/ic_edit_24"
        tools:ignore="ContentDescription,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <!-- Настройки задержки -->
    <Button
        android:id="@+id/fingersDelayBtn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="123dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_baseline_settings_24"
        android:backgroundTint="@android:color/white"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:visibility="visible"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</FrameLayout>