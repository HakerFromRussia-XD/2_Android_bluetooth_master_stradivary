<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- # Main Layout # -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:id="@+id/driver_tv"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:text="driver: 1.00v"
                android:textSize="10sp"
                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

            <TextView
                android:id="@+id/bms_tv"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/driver_tv"
                android:text="bms: 1.00v"
                android:textSize="10sp"
                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

            <TextView
                android:id="@+id/sensor_tv"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/bms_tv"
                android:text="sens: 1.00v"
                android:textSize="10sp"
                tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="DisableBaselineAlignment">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <SeekBar
                        android:id="@+id/open_CH_sb"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-100dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-40dp"
                        android:indeterminate="false"
                        android:max="255"
                        android:progress="30"
                        android:progressDrawable="@drawable/track_invisible"
                        android:rotation="-90"
                        android:thumb="@drawable/thumb_invisible" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <SeekBar
                        android:id="@+id/close_CH_sb"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-40dp"
                        android:layout_marginEnd="-100dp"
                        android:indeterminate="false"
                        android:max="255"
                        android:progress="30"
                        android:progressDrawable="@drawable/track_invisible"
                        android:rotation="-90"
                        android:thumb="@drawable/thumb_invisible" />
                </RelativeLayout>
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_mainchart"
                android:layout_width="match_parent"
                android:layout_marginEnd="-14dp"
                android:layout_height="320dp"
                android:foregroundGravity="center" />

            <LinearLayout
                android:id="@+id/limit_CH1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="80dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/open_threshold"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="open threshold"
                    android:textColor="@color/cream_white"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/font_open_sans"
                    android:textSize="6sp"
                    tools:ignore="HardcodedText,SmallSp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/limit_CH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="94dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/close_threshold"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="close threshold"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/close_threshold"
                    android:fontFamily="@font/font_open_sans"
                    android:textSize="6sp"
                    tools:ignore="HardcodedText,SmallSp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Bottom Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5.5">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4"
                        android:baselineAligned="false">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentStart="true"
                                android:text="correlator out noise threshold 1"
                                android:textSize="9sp"
                                style="@style/Text"
                                tools:ignore="HardcodedText,SmallSp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:id="@+id/correlator_noise_threshold_1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="230"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                style="@style/Text"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5">

                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/correlator_noise_threshold_1_sb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="255"
                                android:paddingStart="16dp"
                                android:paddingEnd="0dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/track_le"
                                android:thumb="@drawable/thumb_le" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4"
                        android:baselineAligned="false">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentStart="true"
                                android:text="correlator out noise threshold 2"
                                android:textSize="9sp"
                                style="@style/Text"
                                tools:ignore="HardcodedText,SmallSp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:id="@+id/correlator_noise_threshold_2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="230"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                style="@style/Text"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5">
                            <androidx.appcompat.widget.AppCompatSeekBar
                                android:id="@+id/correlator_noise_threshold_2_sb"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingEnd="0dp"
                                android:paddingStart="16dp"
                                android:max="255"
                                android:progress="0"
                                android:progressDrawable="@drawable/track_le"
                                android:thumb="@drawable/thumb_le"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/thresholds_blocking_rl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="4"
                        tools:ignore="DisableBaselineAlignment">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:text="settings blocking"
                                style="@style/Text"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:id="@+id/thresholds_blocking_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="off"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                style="@style/Text"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5">

                            <Switch
                                android:id="@+id/thresholds_blocking_sw"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="0dp"
                                android:ellipsize="middle"
                                android:paddingStart="16dp"
                                android:scrollbarSize="48dp"
                                android:thumb="@drawable/switch_le_thumb"
                                android:track="@drawable/switch_le_truck"
                                tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:weightSum="2"
                        tools:ignore="DisableBaselineAlignment">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/open_btn"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="8dp"
                                android:text="open"
                                android:visibility="visible"
                                style="@style/Text"
                                android:background="@drawable/custom_button_le"
                                tools:ignore="HardcodedText" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                                <Button
                                    android:id="@+id/close_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="42dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="8dp"
                                    android:text="close"
                                    android:visibility="visible"
                                    style="@style/Text"
                                    android:background="@drawable/custom_button_le"
                                    tools:ignore="HardcodedText" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
