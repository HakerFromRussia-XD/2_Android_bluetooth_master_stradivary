<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/transparent"
    android:elevation="3dp"
    app:layout_constraintDimensionRatio="H,1:1">

    <View
        android:id="@+id/gestureSprCollection1Btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ubi4_view_with_corners_gray"
        android:elevation="3dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/gestureNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/gesture_1_btn"
        android:fontFamily="@font/sf_pro_display_light"
        android:textColor="@color/white"
        android:elevation="3dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageGesture" />


    <ImageView
        android:id="@+id/imageGesture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="3dp"
        android:importantForAccessibility="no"
        android:src="@drawable/koza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/dotsThreeBtnSpr"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="3dp"
        android:importantForAccessibility="no"
        android:src="@drawable/dotsthree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>